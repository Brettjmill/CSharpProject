@model Comment

<div>
  <form asp-controller="GamePosts" asp-action="CreateComment" class="shadow p-3 rounded" method="POST">
    <div class="form-group">
      <label asp-for="Body">Add a Comment</label>
      <span asp-validation-for="Body" class="text-danger font-weight-bold"></span>
      <input asp-for="Body" class="form-control">
    </div>

    <button class="btn btn-outline-success">Submit</button>
  </form>
</div>